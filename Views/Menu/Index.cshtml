@model IEnumerable<MessManagementSystem.Models.MenuItem>

@{
    ViewData["Title"] = User.IsInRole("Admin") ? "Menu Management" : "Weekly Menu";
    var daysOfWeek = new[] { "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday" };
    var mealTypes = new[] { "Breakfast", "Lunch", "Dinner" };
}

@if (User.IsInRole("Admin"))
{
    <div class="row mb-3">
        <div class="col-12">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus-circle"></i> Add New Menu Item
            </a>
        </div>
    </div>
}

<div class="card">
    <div class="card-header">
        <i class="fas fa-clipboard-list"></i> Weekly Menu Plan
    </div>
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead class="table-light">
                        <tr>
                            <th>Day</th>
                            <th>Meal Type</th>
                            <th>Item Name</th>
                            <th>Description</th>
                            <th>Rate</th>
                            @if (User.IsInRole("Admin"))
                            {
                                <th>Actions</th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var day in daysOfWeek)
                        {
                            var dayItems = Model.Where(m => m.DayOfWeek == day).OrderBy(m => m.MealType);
                            if (dayItems.Any())
                            {
                                var firstItem = true;
                                foreach (var item in dayItems)
                                {
                                    <tr>
                                        @if (firstItem)
                                        {
                                            <td rowspan="@dayItems.Count()" class="align-middle">
                                                <strong>@day</strong>
                                            </td>
                                            firstItem = false;
                                        }
                                        <td>
                                            @if (item.MealType == "Breakfast")
                                            {
                                                <span class="badge bg-warning text-dark">
                                                    <i class="fas fa-coffee"></i> @item.MealType
                                                </span>
                                            }
                                            else if (item.MealType == "Lunch")
                                            {
                                                <span class="badge bg-success">
                                                    <i class="fas fa-utensils"></i> @item.MealType
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-info">
                                                    <i class="fas fa-moon"></i> @item.MealType
                                                </span>
                                            }
                                        </td>
                                        <td><strong>@item.ItemName</strong></td>
                                        <td>@item.Description</td>
                                        <td><strong>â‚¹@item.RatePerServing.ToString("N2")</strong></td>
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Edit" asp-route-id="@item.MenuItemId" 
                                                       class="btn btn-sm btn-warning">
                                                        <i class="fas fa-edit"></i>
                                                </a>
                                                <form asp-action="Delete" asp-route-id="@item.MenuItemId" 
                                                      method="post" class="d-inline"
                                                      onsubmit="return confirm('Are you sure you want to delete this menu item?');">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-sm btn-danger">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                        }
                                    </tr>
                                }
                            }
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5 text-muted">
                <i class="fas fa-clipboard fa-3x mb-3"></i>
                <p>No menu items found. @(User.IsInRole("Admin") ? "Click \"Add New Menu Item\" to get started." : "Menu will be available soon.")</p>
            </div>
        }
    </div>
</div>
