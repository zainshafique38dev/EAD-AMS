@model MessManagementSystem.Models.Bill

@{
    ViewData["Title"] = "Make Payment";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index"><i class="fas fa-home"></i> Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-action="ViewBills">My Bills</a></li>
                    <li class="breadcrumb-item active">Make Payment</li>
                </ol>
            </nav>
        </div>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <!-- Bill Summary -->
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-file-invoice"></i> Bill Summary</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="text-muted">Bill Period</label>
                        <h6>@System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(Model.Month) @Model.Year</h6>
                    </div>
                    <div class="mb-3">
                        <label class="text-muted">Meals Consumed</label>
                        <h6><span class="badge bg-primary">@Model.TotalMealsConsumed</span></h6>
                    </div>
                    <hr />
                    <div class="mb-2">
                        <div class="d-flex justify-content-between">
                            <span>Food Bill:</span>
                            <strong>₹@Model.FoodBill</strong>
                        </div>
                    </div>
                    <div class="mb-2">
                        <div class="d-flex justify-content-between">
                            <span>Water Bill:</span>
                            <strong>₹@Model.WaterBill</strong>
                        </div>
                    </div>
                    @if (Model.UnpaidBalance > 0)
                    {
                        <div class="mb-2">
                            <div class="d-flex justify-content-between text-danger">
                                <span>Previous Balance:</span>
                                <strong>₹@Model.UnpaidBalance</strong>
                            </div>
                        </div>
                    }
                    <hr />
                    <div class="mb-0">
                        <div class="d-flex justify-content-between">
                            <h5>Total Amount:</h5>
                            <h5 class="text-success">₹@Model.TotalBill</h5>
                        </div>
                    </div>
                    
                    @if (!string.IsNullOrEmpty(Model.PaymentToken))
                    {
                        <hr />
                        <div class="alert alert-warning mb-0">
                            <small><strong>Payment Token:</strong></small><br />
                            <code>@Model.PaymentToken</code>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Payment Form -->
        <div class="col-md-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-credit-card"></i> Payment Gateway (Dummy)</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> <strong>Demo Payment Gateway</strong><br />
                        This is a dummy payment gateway for testing. Use any 16-digit card number.
                    </div>

                    <form asp-action="ProcessPayment" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="billId" value="@Model.BillId" />

                        <div class="row mb-3">
                            <div class="col-12">
                                <label for="cardNumber" class="form-label">
                                    <i class="fas fa-credit-card"></i> Card Number <span class="text-danger">*</span>
                                </label>
                                <input type="text" class="form-control form-control-lg" id="cardNumber" name="cardNumber" 
                                       placeholder="1234 5678 9012 3456" maxlength="19" required
                                       pattern="\d{4}\s?\d{4}\s?\d{4}\s?\d{4}" 
                                       oninput="formatCardNumber(this)">
                                <small class="text-muted">Enter any 16-digit number for testing</small>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-12">
                                <label for="cardHolderName" class="form-label">
                                    <i class="fas fa-user"></i> Card Holder Name <span class="text-danger">*</span>
                                </label>
                                <input type="text" class="form-control" id="cardHolderName" name="cardHolderName" 
                                       placeholder="JOHN DOE" required style="text-transform: uppercase;">
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="expiryDate" class="form-label">
                                    <i class="fas fa-calendar"></i> Expiry Date <span class="text-danger">*</span>
                                </label>
                                <input type="text" class="form-control" id="expiryDate" name="expiryDate" 
                                       placeholder="MM/YY" maxlength="5" required
                                       pattern="\d{2}/\d{2}" 
                                       oninput="formatExpiry(this)">
                            </div>
                            <div class="col-md-6">
                                <label for="cvv" class="form-label">
                                    <i class="fas fa-lock"></i> CVV <span class="text-danger">*</span>
                                </label>
                                <input type="password" class="form-control" id="cvv" name="cvv" 
                                       placeholder="123" maxlength="3" required
                                       pattern="\d{3}">
                            </div>
                        </div>

                        <div class="card bg-light mb-3">
                            <div class="card-body">
                                <h6 class="card-title">Test Card Details (For Demo):</h6>
                                <p class="mb-1"><strong>Card Number:</strong> 4111 1111 1111 1111</p>
                                <p class="mb-1"><strong>Name:</strong> Any Name</p>
                                <p class="mb-1"><strong>Expiry:</strong> Any future date (MM/YY)</p>
                                <p class="mb-0"><strong>CVV:</strong> Any 3 digits</p>
                            </div>
                        </div>

                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" id="terms" required>
                            <label class="form-check-label" for="terms">
                                I agree to the terms and conditions for this payment
                            </label>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-check-circle"></i> Pay ₹@Model.TotalBill Now
                            </button>
                            <a asp-action="ViewBills" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                    </form>

                    <div class="mt-4 text-center">
                        <small class="text-muted">
                            <i class="fas fa-shield-alt"></i> Secured by SSL Encryption (Demo)
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function formatCardNumber(input) {
            let value = input.value.replace(/\s/g, '');
            let formattedValue = value.match(/.{1,4}/g)?.join(' ') || value;
            input.value = formattedValue;
        }

        function formatExpiry(input) {
            let value = input.value.replace(/\D/g, '');
            if (value.length >= 2) {
                value = value.substring(0, 2) + '/' + value.substring(2, 4);
            }
            input.value = value;
        }

        // Add card type detection and icon
        document.getElementById('cardNumber').addEventListener('input', function(e) {
            let value = e.target.value.replace(/\s/g, '');
            let icon = document.querySelector('.card-icon');
            
            if (value.startsWith('4')) {
                e.target.classList.remove('is-invalid');
                e.target.classList.add('is-valid');
            } else if (value.length >= 1) {
                // Accept any number for demo
                e.target.classList.remove('is-invalid');
                e.target.classList.add('is-valid');
            }
        });
    </script>
}
