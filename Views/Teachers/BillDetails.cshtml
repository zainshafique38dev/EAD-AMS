@model MessManagementSystem.Models.Bill

@{
    ViewData["Title"] = "Bill Details";
    var attendances = ViewBag.Attendances as List<MessManagementSystem.Models.Attendance>;
    var config = ViewBag.BillingConfig as MessManagementSystem.Models.BillingConfiguration;
}

<div class="container mt-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-action="ViewBills">My Bills</a></li>
            <li class="breadcrumb-item active">Bill Details</li>
        </ol>
    </nav>

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="fas fa-receipt text-primary me-2"></i>Bill Details</h2>
            <p class="text-muted">Detailed breakdown for @DateTime.Parse($"{Model.Year}-{Model.Month}-01").ToString("MMMM yyyy")</p>
        </div>
        <a asp-action="ViewBills" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i>Back to Bills
        </a>
    </div>

    <div class="row">
        <!-- Bill Summary Card -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-file-invoice me-2"></i>Bill Summary</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <p class="mb-1 text-muted"><i class="fas fa-calendar me-2"></i>Period</p>
                        <h6>@DateTime.Parse($"{Model.Year}-{Model.Month}-01").ToString("MMMM yyyy")</h6>
                    </div>

                    <div class="mb-3">
                        <p class="mb-1 text-muted"><i class="fas fa-utensils me-2"></i>Total Meals</p>
                        <h6>@Model.TotalMealsConsumed meals</h6>
                    </div>

                    <hr />

                    <div class="mb-3">
                        <p class="mb-1 text-muted"><i class="fas fa-burger me-2"></i>Food Bill</p>
                        <h5 class="text-success">₹@Model.FoodBill.ToString("N2")</h5>
                    </div>

                    <div class="mb-3">
                        <p class="mb-1 text-muted"><i class="fas fa-tint me-2"></i>Water Bill</p>
                        <h5 class="text-info">₹@Model.WaterBill.ToString("N2")</h5>
                    </div>

                    <hr />

                    <div class="mb-3">
                        <p class="mb-1 text-muted"><strong>Total Amount</strong></p>
                        <h3 class="text-primary">₹@Model.TotalBill.ToString("N2")</h3>
                    </div>

                    <div class="mb-3">
                        <p class="mb-1 text-muted"><strong>Status</strong></p>
                        @if (Model.IsPaid)
                        {
                            <span class="badge bg-success px-3 py-2">
                                <i class="fas fa-check-circle me-1"></i>Paid
                            </span>
                            @if (Model.PaidDate.HasValue)
                            {
                                <p class="mt-2 small text-muted">
                                    Paid on @Model.PaidDate.Value.ToString("MMM dd, yyyy")
                                </p>
                            }
                        }
                        else
                        {
                            <span class="badge bg-danger px-3 py-2">
                                <i class="fas fa-exclamation-circle me-1"></i>Unpaid
                            </span>
                        }
                    </div>

                    @if (!string.IsNullOrEmpty(Model.TransactionId))
                    {
                        <div class="mb-3">
                            <p class="mb-1 text-muted">Transaction ID</p>
                            <p class="small"><code>@Model.TransactionId</code></p>
                        </div>
                    }

                    @if (!Model.IsPaid)
                    {
                        <a asp-action="MakePayment" asp-route-id="@Model.BillId" class="btn btn-success w-100">
                            <i class="fas fa-credit-card me-2"></i>Pay Now
                        </a>
                    }
                </div>
            </div>

            <!-- Rate Card -->
            @if (config != null)
            {
                <div class="card shadow-sm mt-4">
                    <div class="card-header bg-info text-white">
                        <h6 class="mb-0"><i class="fas fa-tags me-2"></i>Meal Rates</h6>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span><i class="fas fa-coffee me-1"></i>Breakfast</span>
                            <strong>₹@config.DefaultBreakfastRate</strong>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span><i class="fas fa-utensils me-1"></i>Lunch</span>
                            <strong>₹@config.DefaultLunchRate</strong>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span><i class="fas fa-moon me-1"></i>Dinner</span>
                            <strong>₹@config.DefaultDinnerRate</strong>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Daily Breakdown Card -->
        <div class="col-lg-8 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="fas fa-calendar-day me-2"></i>Daily Meal Breakdown</h5>
                </div>
                <div class="card-body">
                    @if (attendances != null && attendances.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th><i class="fas fa-calendar me-1"></i>Date</th>
                                        <th><i class="fas fa-coffee me-1"></i>Breakfast</th>
                                        <th><i class="fas fa-utensils me-1"></i>Lunch</th>
                                        <th><i class="fas fa-moon me-1"></i>Dinner</th>
                                        <th class="text-end"><i class="fas fa-calculator me-1"></i>Daily Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var attendance in attendances)
                                    {
                                        decimal dailyTotal = 0;
                                        if (config != null)
                                        {
                                            if (attendance.BreakfastTaken) dailyTotal += config.DefaultBreakfastRate;
                                            if (attendance.LunchTaken) dailyTotal += config.DefaultLunchRate;
                                            if (attendance.DinnerTaken) dailyTotal += config.DefaultDinnerRate;
                                        }

                                        <tr>
                                            <td>
                                                <strong>@attendance.Date.ToString("MMM dd, yyyy")</strong>
                                                <br />
                                                <small class="text-muted">@attendance.Date.DayOfWeek</small>
                                            </td>
                                            <td>
                                                @if (attendance.BreakfastTaken)
                                                {
                                                    <span class="badge bg-warning text-dark">
                                                        <i class="fas fa-check me-1"></i>₹@config?.DefaultBreakfastRate
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-light text-muted">
                                                        <i class="fas fa-times me-1"></i>-
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                @if (attendance.LunchTaken)
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="fas fa-check me-1"></i>₹@config?.DefaultLunchRate
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-light text-muted">
                                                        <i class="fas fa-times me-1"></i>-
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                @if (attendance.DinnerTaken)
                                                {
                                                    <span class="badge bg-info">
                                                        <i class="fas fa-check me-1"></i>₹@config?.DefaultDinnerRate
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-light text-muted">
                                                        <i class="fas fa-times me-1"></i>-
                                                    </span>
                                                }
                                            </td>
                                            <td class="text-end">
                                                <strong class="text-primary">₹@dailyTotal.ToString("N2")</strong>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot class="table-light">
                                    <tr>
                                        <td colspan="4" class="text-end"><strong>Food Bill Total:</strong></td>
                                        <td class="text-end"><strong class="text-success fs-5">₹@Model.FoodBill.ToString("N2")</strong></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>

                        <!-- Summary Stats -->
                        <div class="row mt-4">
                            <div class="col-md-4">
                                <div class="card bg-warning bg-opacity-10 border-0">
                                    <div class="card-body text-center">
                                        <i class="fas fa-coffee fa-2x text-warning mb-2"></i>
                                        <h4 class="mb-0">@attendances.Count(a => a.BreakfastTaken)</h4>
                                        <small class="text-muted">Breakfast Days</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card bg-success bg-opacity-10 border-0">
                                    <div class="card-body text-center">
                                        <i class="fas fa-utensils fa-2x text-success mb-2"></i>
                                        <h4 class="mb-0">@attendances.Count(a => a.LunchTaken)</h4>
                                        <small class="text-muted">Lunch Days</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card bg-info bg-opacity-10 border-0">
                                    <div class="card-body text-center">
                                        <i class="fas fa-moon fa-2x text-info mb-2"></i>
                                        <h4 class="mb-0">@attendances.Count(a => a.DinnerTaken)</h4>
                                        <small class="text-muted">Dinner Days</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No attendance records found</h5>
                            <p class="text-muted">There are no meal records for this billing period.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
