@model IEnumerable<MessManagementSystem.Models.Attendance>

@{
    ViewData["Title"] = "Verify Attendance";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index"><i class="fas fa-home"></i> Dashboard</a></li>
                    <li class="breadcrumb-item active">Verify Attendance</li>
                </ol>
            </nav>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0"><i class="fas fa-exclamation-triangle"></i> Verify & Report Wrong Attendance</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> 
                        <strong>Important:</strong> Review your attendance records below. If you find any incorrect entries, you can report them to the admin for correction.
                    </div>

                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover" id="verifyTable">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Date</th>
                                        <th>Day</th>
                                        <th>Breakfast</th>
                                        <th>Lunch</th>
                                        <th>Dinner</th>
                                        <th>Total Meals</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var attendance in Model)
                                    {
                                        var isReported = !string.IsNullOrEmpty(attendance.Remarks) && attendance.Remarks.Contains("[REPORTED BY TEACHER]");
                                        <tr class="@(isReported ? "table-warning" : "")">
                                            <td><strong>@attendance.Date.ToString("dd MMM yyyy")</strong></td>
                                            <td>@attendance.Date.DayOfWeek</td>
                                            <td>
                                                @if (attendance.BreakfastTaken)
                                                {
                                                    <span class="badge bg-success"><i class="fas fa-check"></i> Yes</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary"><i class="fas fa-times"></i> No</span>
                                                }
                                            </td>
                                            <td>
                                                @if (attendance.LunchTaken)
                                                {
                                                    <span class="badge bg-success"><i class="fas fa-check"></i> Yes</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary"><i class="fas fa-times"></i> No</span>
                                                }
                                            </td>
                                            <td>
                                                @if (attendance.DinnerTaken)
                                                {
                                                    <span class="badge bg-success"><i class="fas fa-check"></i> Yes</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary"><i class="fas fa-times"></i> No</span>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge bg-primary">
                                                    @((attendance.BreakfastTaken ? 1 : 0) + (attendance.LunchTaken ? 1 : 0) + (attendance.DinnerTaken ? 1 : 0))
                                                </span>
                                            </td>
                                            <td>
                                                @if (isReported)
                                                {
                                                    <span class="badge bg-warning text-dark">
                                                        <i class="fas fa-flag"></i> Already Reported
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="fas fa-check"></i> Verified
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                @if (!isReported)
                                                {
                                                    <button type="button" class="btn btn-sm btn-warning" 
                                                            data-bs-toggle="modal" 
                                                            data-bs-target="#reportModal" 
                                                            data-attendance-id="@attendance.AttendanceId"
                                                            data-date="@attendance.Date.ToString("dd MMM yyyy")"
                                                            data-breakfast="@attendance.BreakfastTaken"
                                                            data-lunch="@attendance.LunchTaken"
                                                            data-dinner="@attendance.DinnerTaken">
                                                        <i class="fas fa-flag"></i> Report Issue
                                                    </button>
                                                }
                                                else
                                                {
                                                    <button type="button" class="btn btn-sm btn-secondary" disabled>
                                                        <i class="fas fa-check"></i> Reported
                                                    </button>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info text-center">
                            <i class="fas fa-info-circle fa-2x mb-2"></i>
                            <h5>No Recent Attendance Records</h5>
                            <p class="mb-0">No attendance records found for the last 30 days.</p>
                        </div>
                    }

                    <div class="mt-3 text-center">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to Dashboard
                        </a>
                        <a asp-action="ViewAttendance" class="btn btn-primary">
                            <i class="fas fa-calendar-alt"></i> View All Attendance
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Report Modal -->
<div class="modal fade" id="reportModal" tabindex="-1" aria-labelledby="reportModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="ReportWrongAttendance" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header bg-warning text-dark">
                    <h5 class="modal-title" id="reportModalLabel">
                        <i class="fas fa-exclamation-triangle"></i> Report Wrong Attendance
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="attendanceId" id="attendanceId" />
                    
                    <div class="alert alert-warning">
                        <strong>Date:</strong> <span id="modalDate"></span><br />
                        <strong>Breakfast:</strong> <span id="modalBreakfast"></span><br />
                        <strong>Lunch:</strong> <span id="modalLunch"></span><br />
                        <strong>Dinner:</strong> <span id="modalDinner"></span>
                    </div>

                    <div class="mb-3">
                        <label for="reason" class="form-label">
                            <i class="fas fa-comment"></i> Reason for Reporting <span class="text-danger">*</span>
                        </label>
                        <textarea class="form-control" id="reason" name="reason" rows="4" 
                                  placeholder="Please explain what is wrong with this attendance record..." 
                                  required></textarea>
                        <small class="text-muted">Be specific about what needs to be corrected (e.g., "I was absent on this day" or "I only had lunch, not breakfast")</small>
                    </div>

                    <div class="alert alert-info mb-0">
                        <i class="fas fa-info-circle"></i> Your report will be sent to the admin for review and correction.
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times"></i> Cancel
                    </button>
                    <button type="submit" class="btn btn-warning">
                        <i class="fas fa-paper-plane"></i> Submit Report
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#verifyTable').DataTable({
                "order": [[0, "desc"]],
                "pageLength": 15,
                "language": {
                    "search": "Search:",
                    "lengthMenu": "Show _MENU_ records per page"
                }
            });

            // Handle modal data
            $('#reportModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var attendanceId = button.data('attendance-id');
                var date = button.data('date');
                var breakfast = button.data('breakfast');
                var lunch = button.data('lunch');
                var dinner = button.data('dinner');

                var modal = $(this);
                modal.find('#attendanceId').val(attendanceId);
                modal.find('#modalDate').text(date);
                modal.find('#modalBreakfast').html(breakfast ? '<span class="badge bg-success">Yes</span>' : '<span class="badge bg-secondary">No</span>');
                modal.find('#modalLunch').html(lunch ? '<span class="badge bg-success">Yes</span>' : '<span class="badge bg-secondary">No</span>');
                modal.find('#modalDinner').html(dinner ? '<span class="badge bg-success">Yes</span>' : '<span class="badge bg-secondary">No</span>');
                modal.find('#reason').val('');
            });
        });
    </script>
}
