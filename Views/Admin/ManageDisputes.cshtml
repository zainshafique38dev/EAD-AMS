@model IEnumerable<MessManagementSystem.Models.AttendanceDispute>

@{
    ViewData["Title"] = "Manage Attendance Disputes";
    var currentStatus = ViewBag.CurrentStatus as string ?? "Pending";
}

<div class="container-fluid mt-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Dashboard</a></li>
            <li class="breadcrumb-item active">Manage Disputes</li>
        </ol>
    </nav>

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="fas fa-exclamation-triangle text-warning me-2"></i>Attendance Disputes</h2>
            <p class="text-muted">Review and resolve attendance disputes reported by teachers</p>
        </div>
    </div>

    <!-- Alerts -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Status Filter Tabs -->
    <ul class="nav nav-tabs mb-4">
        <li class="nav-item">
            <a class="nav-link @(currentStatus == "Pending" ? "active" : "")" 
               asp-action="ManageDisputes" asp-route-status="Pending">
                <i class="fas fa-clock me-1"></i>Pending
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(currentStatus == "Approved" ? "active" : "")" 
               asp-action="ManageDisputes" asp-route-status="Approved">
                <i class="fas fa-check me-1"></i>Approved
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(currentStatus == "Rejected" ? "active" : "")" 
               asp-action="ManageDisputes" asp-route-status="Rejected">
                <i class="fas fa-times me-1"></i>Rejected
            </a>
        </li>
    </ul>

    <!-- Disputes Table -->
    <div class="card shadow-sm">
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No @currentStatus.ToLower() disputes found</h5>
                    <p class="text-muted">All disputes have been processed or none have been reported yet.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Dispute ID</th>
                                <th>Teacher</th>
                                <th>Attendance Date</th>
                                <th>Meals</th>
                                <th>Reason</th>
                                <th>Reported On</th>
                                @if (currentStatus != "Pending")
                                {
                                    <th>Resolved By</th>
                                    <th>Resolved On</th>
                                }
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var dispute in Model)
                            {
                                <tr>
                                    <td><strong>#@dispute.DisputeId</strong></td>
                                    <td>
                                        <i class="fas fa-user-tie me-1"></i>@dispute.Teacher?.FullName
                                    </td>
                                    <td>
                                        @dispute.Attendance?.Date.ToString("MMM dd, yyyy")
                                    </td>
                                    <td>
                                        @if (dispute.Attendance?.BreakfastTaken == true)
                                        {
                                            <span class="badge bg-warning text-dark me-1">
                                                <i class="fas fa-coffee"></i> Breakfast
                                            </span>
                                        }
                                        @if (dispute.Attendance?.LunchTaken == true)
                                        {
                                            <span class="badge bg-success me-1">
                                                <i class="fas fa-utensils"></i> Lunch
                                            </span>
                                        }
                                        @if (dispute.Attendance?.DinnerTaken == true)
                                        {
                                            <span class="badge bg-info me-1">
                                                <i class="fas fa-moon"></i> Dinner
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <small>@(dispute.Reason?.Length > 50 ? dispute.Reason.Substring(0, 50) + "..." : dispute.Reason)</small>
                                    </td>
                                    <td>
                                        <small>@dispute.ReportedDate.ToString("MMM dd, yyyy hh:mm tt")</small>
                                    </td>
                                    @if (currentStatus != "Pending")
                                    {
                                        <td>
                                            @if (dispute.ResolvedByUser != null)
                                            {
                                                <i class="fas fa-user-shield me-1"></i>@dispute.ResolvedByUser.Username
                                            }
                                        </td>
                                        <td>
                                            @if (dispute.ResolvedDate.HasValue)
                                            {
                                                <small>@dispute.ResolvedDate.Value.ToString("MMM dd, yyyy hh:mm tt")</small>
                                            }
                                        </td>
                                    }
                                    <td>
                                        @if (currentStatus == "Pending")
                                        {
                                            <button type="button" class="btn btn-sm btn-primary" 
                                                    onclick="openResolveModal(@dispute.DisputeId, '@dispute.Teacher?.FullName', '@dispute.Attendance?.Date.ToString("MMM dd, yyyy")', '@(dispute.Attendance?.BreakfastTaken == true ? "Breakfast" : "")', '@(dispute.Attendance?.LunchTaken == true ? "Lunch" : "")', '@(dispute.Attendance?.DinnerTaken == true ? "Dinner" : "")', '@dispute.Reason?.Replace("'", "\\'").Replace("\n", " ")')">
                                                <i class="fas fa-gavel me-1"></i>Resolve
                                            </button>
                                        }
                                        else
                                        {
                                            <a asp-action="ViewDispute" asp-route-id="@dispute.DisputeId" class="btn btn-sm btn-outline-secondary">
                                                <i class="fas fa-eye me-1"></i>View
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

<!-- Resolve Dispute Modal -->
<div class="modal fade" id="resolveModal" tabindex="-1" aria-labelledby="resolveModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form asp-action="ResolveDispute" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="disputeId" id="modalDisputeId" />
                
                <div class="modal-header bg-warning">
                    <h5 class="modal-title" id="resolveModalLabel">
                        <i class="fas fa-gavel me-2"></i>Resolve Attendance Dispute
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                
                <div class="modal-body">
                    <div class="alert alert-info">
                        <h6><i class="fas fa-info-circle me-2"></i>Dispute Details</h6>
                        <p class="mb-1"><strong>Teacher:</strong> <span id="modalTeacher"></span></p>
                        <p class="mb-1"><strong>Date:</strong> <span id="modalDate"></span></p>
                        <p class="mb-1"><strong>Meals Marked:</strong> <span id="modalMeals"></span></p>
                        <p class="mb-0"><strong>Reason:</strong> <span id="modalReason"></span></p>
                    </div>

                    <div class="alert alert-warning">
                        <h6><i class="fas fa-exclamation-triangle me-2"></i>Important</h6>
                        <ul class="mb-0">
                            <li><strong>Approve:</strong> The attendance will be deleted and the bill will be adjusted (deduction applied).</li>
                            <li><strong>Reject:</strong> No changes will be made to attendance or bill.</li>
                        </ul>
                    </div>

                    <div class="mb-3">
                        <label for="adminNotes" class="form-label">Admin Notes (Optional)</label>
                        <textarea class="form-control" id="adminNotes" name="adminNotes" rows="3" 
                                  placeholder="Add any notes or explanation for your decision..."></textarea>
                    </div>
                </div>
                
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-1"></i>Cancel
                    </button>
                    <button type="submit" name="action" value="Reject" class="btn btn-danger">
                        <i class="fas fa-times-circle me-1"></i>Reject Dispute
                    </button>
                    <button type="submit" name="action" value="Approve" class="btn btn-success">
                        <i class="fas fa-check-circle me-1"></i>Approve & Remove Attendance
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function openResolveModal(disputeId, teacher, date, breakfast, lunch, dinner, reason) {
            document.getElementById('modalDisputeId').value = disputeId;
            document.getElementById('modalTeacher').textContent = teacher;
            document.getElementById('modalDate').textContent = date;
            
            // Build meals string
            let meals = [];
            if (breakfast) meals.push(breakfast);
            if (lunch) meals.push(lunch);
            if (dinner) meals.push(dinner);
            document.getElementById('modalMeals').textContent = meals.join(', ') || 'None';
            
            document.getElementById('modalReason').textContent = reason;
            
            var modal = new bootstrap.Modal(document.getElementById('resolveModal'));
            modal.show();
        }
    </script>
}
