@model MessManagementSystem.Models.Teacher

@{
    ViewData["Title"] = "Teacher Details";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <a asp-action="ManageTeachers" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to Teachers List
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Teacher Profile Card -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center">
                    <i class="fas fa-user-circle fa-3x mt-3"></i>
                    <h4 class="mt-2">@Model.FullName</h4>
                </div>
                <div class="card-body">
                    <table class="table table-borderless">
                        <tr>
                            <td><i class="fas fa-envelope text-primary"></i> <strong>Email:</strong></td>
                            <td><a href="mailto:@Model.Email">@Model.Email</a></td>
                        </tr>
                        <tr>
                            <td><i class="fas fa-phone text-success"></i> <strong>Phone:</strong></td>
                            <td>@Model.PhoneNumber</td>
                        </tr>
                        <tr>
                            <td><i class="fas fa-building text-info"></i> <strong>Department:</strong></td>
                            <td><span class="badge bg-info">@Model.Department</span></td>
                        </tr>
                        <tr>
                            <td><i class="fas fa-calendar text-warning"></i> <strong>Joined:</strong></td>
                            <td>@Model.JoiningDate.ToString("MMM dd, yyyy")</td>
                        </tr>
                        <tr>
                            <td><i class="fas fa-toggle-on text-success"></i> <strong>Status:</strong></td>
                            <td>
                                @if (Model.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inactive</span>
                                }
                            </td>
                        </tr>
                        @if (Model.User != null)
                        {
                            <tr>
                                <td><i class="fas fa-user-tag text-secondary"></i> <strong>Username:</strong></td>
                                <td><code>@Model.User.Username</code></td>
                            </tr>
                        }
                    </table>

                    <div class="d-grid gap-2 mt-3">
                        <a asp-action="EditTeacher" asp-route-id="@Model.TeacherId" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Edit Profile
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Attendance Summary -->
        <div class="col-lg-8 mb-4">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-calendar-check"></i> Recent Attendance (Last 30 Days)</h5>
                </div>
                <div class="card-body">
                    @if (Model.Attendances != null && Model.Attendances.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover table-sm">
                                <thead class="table-light">
                                    <tr>
                                        <th>Date</th>
                                        <th>Breakfast</th>
                                        <th>Lunch</th>
                                        <th>Dinner</th>
                                        <th>Remarks</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var attendance in Model.Attendances)
                                    {
                                        <tr>
                                            <td>@attendance.Date.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                @if (attendance.BreakfastTaken)
                                                {
                                                    <span class="badge bg-success"><i class="fas fa-check"></i> Yes</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary"><i class="fas fa-times"></i> No</span>
                                                }
                                            </td>
                                            <td>
                                                @if (attendance.LunchTaken)
                                                {
                                                    <span class="badge bg-success"><i class="fas fa-check"></i> Yes</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary"><i class="fas fa-times"></i> No</span>
                                                }
                                            </td>
                                            <td>
                                                @if (attendance.DinnerTaken)
                                                {
                                                    <span class="badge bg-success"><i class="fas fa-check"></i> Yes</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary"><i class="fas fa-times"></i> No</span>
                                                }
                                            </td>
                                            <td>@(string.IsNullOrEmpty(attendance.Remarks) ? "—" : attendance.Remarks)</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> No attendance records found for this teacher.
                        </div>
                    }
                </div>
            </div>

            <!-- Billing Summary -->
            <div class="card shadow mt-4">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="fas fa-file-invoice-dollar"></i> Recent Bills</h5>
                </div>
                <div class="card-body">
                    @if (Model.Bills != null && Model.Bills.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover table-sm">
                                <thead class="table-light">
                                    <tr>
                                        <th>Month/Year</th>
                                        <th>Food Bill</th>
                                        <th>Water Bill</th>
                                        <th>Total</th>
                                        <th>Meals</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var bill in Model.Bills)
                                    {
                                        <tr>
                                            <td>@System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(bill.Month) @bill.Year</td>
                                            <td>₹@bill.FoodBill.ToString("N2")</td>
                                            <td>₹@bill.WaterBill.ToString("N2")</td>
                                            <td><strong>₹@bill.TotalBill.ToString("N2")</strong></td>
                                            <td>@bill.TotalMealsConsumed</td>
                                            <td>
                                                @if (bill.IsPaid)
                                                {
                                                    <span class="badge bg-success"><i class="fas fa-check-circle"></i> Paid</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger"><i class="fas fa-exclamation-circle"></i> Unpaid</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> No billing records found for this teacher.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        border-radius: 10px;
    }

    .card-header {
        border-radius: 10px 10px 0 0 !important;
        font-weight: 600;
    }
</style>
