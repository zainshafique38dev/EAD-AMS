@model IEnumerable<MessManagementSystem.Models.Teacher>

@{
    ViewData["Title"] = "Manage Teachers";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2><i class="fas fa-chalkboard-teacher text-primary"></i> Manage Teachers</h2>
                    <p class="text-muted">Add, edit, or remove teachers from the system</p>
                </div>
                <div>
                    <a asp-action="CreateTeacher" class="btn btn-primary btn-lg">
                        <i class="fas fa-plus-circle"></i> Add New Teacher
                    </a>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="fas fa-users"></i> Teachers List</h5>
                    <div class="input-group" style="width: 250px;">
                        <span class="input-group-text bg-white border-end-0">
                            <i class="fas fa-search text-muted"></i>
                        </span>
                        <input type="text" class="form-control border-start-0" id="searchInput" placeholder="Search teachers...">
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover table-striped" id="teachersTable">
                            <thead class="table-dark">
                                <tr>
                                    <th>#</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                    <th>Department</th>
                                    <th>Username</th>
                                    <th>Joining Date</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    int counter = 1;
                                    foreach (var teacher in Model)
                                    {
                                        <tr>
                                            <td>@counter</td>
                                            <td>
                                                <strong>@teacher.FullName</strong>
                                            </td>
                                            <td>
                                                <a href="mailto:@teacher.Email">
                                                    <i class="fas fa-envelope"></i> @teacher.Email
                                                </a>
                                            </td>
                                            <td>
                                                <i class="fas fa-phone"></i> @teacher.PhoneNumber
                                            </td>
                                            <td>
                                                <span class="badge bg-info">@teacher.Department</span>
                                            </td>
                                            <td>
                                                @if (teacher.User != null)
                                                {
                                                    <code>@teacher.User.Username</code>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">N/A</span>
                                                }
                                            </td>
                                            <td>@teacher.JoiningDate.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                @if (teacher.IsActive)
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="fas fa-check-circle"></i> Active
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">
                                                        <i class="fas fa-times-circle"></i> Inactive
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="ViewTeacherDetails" asp-route-id="@teacher.TeacherId" 
                                                       class="btn btn-sm btn-info" title="View Details">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="EditTeacher" asp-route-id="@teacher.TeacherId" 
                                                       class="btn btn-sm btn-warning" title="Edit">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <button type="button" class="btn btn-sm btn-danger" 
                                                            onclick="confirmDelete(@teacher.TeacherId, '@teacher.FullName')" 
                                                            title="Delete Permanently">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                        counter++;
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="9" class="text-center text-muted py-4">
                                            <i class="fas fa-info-circle"></i> No teachers found. Click "Add New Teacher" to get started.
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="fas fa-exclamation-triangle"></i> Confirm Delete
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="text-center mb-3">
                    <i class="fas fa-user-times fa-4x text-danger mb-3"></i>
                </div>
                <p class="text-center fs-5">Are you sure you want to <strong class="text-danger">permanently delete</strong> teacher:</p>
                <p class="text-center fs-4 fw-bold" id="deleteTeacherName"></p>
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-circle"></i>
                    <strong>Warning:</strong> This will remove:
                    <ul class="mb-0 mt-2">
                        <li>Teacher profile</li>
                        <li>Login account</li>
                        <li>All attendance records</li>
                        <li>All billing records</li>
                    </ul>
                </div>
                <p class="text-center text-danger fw-bold">
                    <i class="fas fa-ban"></i> This action CANNOT be undone!
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times"></i> Cancel
                </button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">
                    <span><i class="fas fa-trash"></i> Delete Permanently</span>
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Form -->
<form id="deleteForm" method="post" asp-action="DeleteTeacher" style="display:none;">
    @Html.AntiForgeryToken()
    <input type="hidden" id="deleteId" name="id" />
</form>

@section Scripts {
    <script>
        let deleteTeacherId = null;
        
        function confirmDelete(id, name) {
            deleteTeacherId = id;
            $('#deleteTeacherName').text(name);
            $('#deleteModal').modal('show');
        }

        $(document).ready(function() {
            // Handle delete confirmation
            $('#confirmDeleteBtn').on('click', function() {
                if (deleteTeacherId) {
                    const btn = $(this);
                    btn.addClass('btn-loading').prop('disabled', true);
                    
                    $('#deleteId').val(deleteTeacherId);
                    
                    // Submit via AJAX
                    $.ajax({
                        url: '@Url.Action("DeleteTeacher", "Admin")',
                        method: 'POST',
                        data: $('#deleteForm').serialize(),
                        success: function(response) {
                            $('#deleteModal').modal('hide');
                            MessApp.showToast('Teacher deleted successfully!', 'success');
                            
                            // Remove row from table with animation
                            $('button[onclick*="confirmDelete(' + deleteTeacherId + '"]')
                                .closest('tr')
                                .fadeOut(400, function() {
                                    $(this).remove();
                                    // Update row numbers
                                    updateRowNumbers();
                                });
                        },
                        error: function(xhr) {
                            btn.removeClass('btn-loading').prop('disabled', false);
                            $('#deleteModal').modal('hide');
                            MessApp.showToast('Error deleting teacher. Please try again.', 'error');
                        }
                    });
                }
            });

            // Reset modal state when hidden
            $('#deleteModal').on('hidden.bs.modal', function() {
                $('#confirmDeleteBtn').removeClass('btn-loading').prop('disabled', false);
                deleteTeacherId = null;
            });

            // Search functionality
            $('#searchInput').on('keyup', function() {
                const searchTerm = $(this).val().toLowerCase();
                $('#teachersTable tbody tr').each(function() {
                    const text = $(this).text().toLowerCase();
                    $(this).toggle(text.indexOf(searchTerm) > -1);
                });
            });

            function updateRowNumbers() {
                $('#teachersTable tbody tr:visible').each(function(index) {
                    $(this).find('td:first').text(index + 1);
                });
            }
        });
    </script>
}

<style>
    .card {
        border: none;
        border-radius: 10px;
    }

    .card-header {
        border-radius: 10px 10px 0 0 !important;
    }

    .table th {
        font-weight: 600;
    }

    .btn-group .btn {
        margin: 0 2px;
    }
</style>
