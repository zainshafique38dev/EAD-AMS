@model IEnumerable<MessManagementSystem.Models.Bill>

@{
    ViewData["Title"] = "Billing Management";
}

<div class="row mb-3">
    <div class="col-12">
        <a asp-action="Generate" class="btn btn-primary">
            <i class="fas fa-file-invoice"></i> Generate Bills
        </a>
        <a asp-action="Configuration" class="btn btn-info">
            <i class="fas fa-cog"></i> Billing Configuration
        </a>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <i class="fas fa-file-invoice-dollar"></i> All Bills
    </div>
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Teacher Name</th>
                            <th>Period</th>
                            <th class="text-end">Food Bill</th>
                            <th class="text-end">Water Bill</th>
                            <th class="text-end">Total Bill</th>
                            <th>Meals</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var bill in Model)
                        {
                            <tr>
                                <td><strong>@bill.Teacher.FullName</strong></td>
                                <td>@(new DateTime(bill.Year, bill.Month, 1).ToString("MMMM yyyy"))</td>
                                <td class="text-end">₹@bill.FoodBill.ToString("N2")</td>
                                <td class="text-end">₹@bill.WaterBill.ToString("N2")</td>
                                <td class="text-end">
                                    <strong class="text-primary">₹@bill.TotalBill.ToString("N2")</strong>
                                </td>
                                <td>
                                    <span class="badge bg-info">@bill.TotalMealsConsumed meals</span>
                                </td>
                                <td>
                                    @if (bill.IsPaid)
                                    {
                                        <span class="badge bg-success">
                                            <i class="fas fa-check"></i> Paid
                                        </span>
                                        <small class="d-block text-muted">
                                            @bill.PaidDate?.ToString("MMM dd, yyyy")
                                        </small>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">
                                            <i class="fas fa-clock"></i> Pending
                                        </span>
                                    }
                                </td>
                                <td>
                                    @if (!bill.IsPaid)
                                    {
                                        <form asp-action="MarkPaid" asp-route-id="@bill.BillId" 
                                              method="post" class="d-inline"
                                              onsubmit="return confirm('Mark this bill as paid?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-success">
                                                <i class="fas fa-check"></i> Mark Paid
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <form asp-action="Delete" asp-route-id="@bill.BillId" 
                                              method="post" class="d-inline"
                                              onsubmit="return confirm('Are you sure you want to delete this paid bill? This action cannot be undone.');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-danger">
                                                <i class="fas fa-trash"></i> Delete
                                            </button>
                                        </form>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5 text-muted">
                <i class="fas fa-file-invoice fa-3x mb-3"></i>
                <p>No bills found. Click "Generate Bills" to create bills for a month.</p>
            </div>
        }
    </div>
</div>
